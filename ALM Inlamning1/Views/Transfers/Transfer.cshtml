@model List<ALM_Inlamning1.Models.Customer>

@{
    ViewData["Title"] = "Öveföring";
}

<div class="row">
    <div class="col-md-5">
        <h2>Överföring görs här:</h2>
        <hr />

        <form asp-controller="Transfers" asp-action="Transfer" asp-route-fromNumber="" asp-route-toNumber="" asp-route-sum="" method="post">
            <label> Från Kontonummer: </label>
            <input name="fromNumber" type="text" class="form-control" placeholder="Från Kontonummer..." />

            <label> Till Kontonummer: </label>
            <input name="toNumber" type="text" class="form-control" placeholder="Till Kontonummer..." />

            <label>Summa: </label>
            <input name="sum" type="text" class="form-control" placeholder="Summa..." />

            <input min="1" type="submit" class="btn btn-success" style="margin-top:5px;" name="Transfer" value="Överföring" formaction="Transfer" />            
        </form>
        <h6>@ViewBag.ErrorMessage</h6>

    </div>

    <div class="col-md-3"></div>

    <div class="col-md-4">
        <h2>Kunder</h2>

        @foreach (var values in Model)
        {
            <h6><b>@values.Name @values.LastName</b>  har kundnummer: @values.PersonId </h6>
            @foreach (var item in values.Account)
            {
                <h6>Saldo på konto nummer @item.AccountId är @item.Money:-</h6>
            }
            <hr />
        }
    </div>

</div>

