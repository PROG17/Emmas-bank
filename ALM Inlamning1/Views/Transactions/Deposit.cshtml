@model List<ALM_Inlamning1.Models.Customer>

@{
    ViewData["Title"] = "Insättning";
}

<div class="row">
    <div class="col-md-5">
        <h2>Insättning görs här:</h2>
        <hr />

        <form asp-controller="Transactions" asp-action="Deposit" asp-route-number="" asp-route-sum="" method="post">
            <label> Till Kontonummer: </label>
            <input name="number" type="text" class="form-control" placeholder="Kontonummer..." />

            <label>Summa: </label>
            <input name="sum" type="text" class="form-control" placeholder="Summa..." />

            <input min="1" type="submit" class="btn btn-success" style="margin-top:5px;" name="Deposit" value="Insättning" formaction="Deposit" />
            <input min="0" type="submit" class="btn btn-success" style="margin-top:5px;" name="Withdraw" value="Uttag" formaction="Withdraw" />
        </form>
       <h6>@ViewBag.ErrorMessage</h6>

    </div>

    <div class="col-md-3"></div>

    <div class="col-md-4">
        <h2>Kunder</h2>

        @foreach (var values in Model)
        {
            <h6><b>@values.Name @values.LastName</b>  har kundnummer: @values.PersonId </h6>
            @foreach (var item in values.Account)
            {
                <h6>Saldo på konto nummer @item.AccountId är @item.Money:-</h6>
            }
            <hr />
        }
    </div>

</div>
